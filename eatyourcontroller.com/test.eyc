import basics;
alias core.*;
alias basics.*;

import /eatyourcontroller.com/assets/0x72robots/rgbiih as robots;

fabric Test test.txt;

export main class Main : robots.RobotsStage {
    override mutating void init() {
        this.layout = [Test];
        super();
        num w = this.w;
        num h = this.h;

        Gravity g = new {
            this.z = 1;
            this.gy = 0x.1;
            this.termy = 2;
            this.bbx2 = w;
            this.bby2 = h;
        };
        this.addObject(g);

        OrangeRobot m = new {
            this.init();
            this.x = 30;
            this.vx = -0x.04;
            this.z = 1;
            this.bbx1 = 0x.1;
            this.bbx2 = 0x.f;
            this.bby1 = 0x.1;
            this.bby2 = 0x1.f;
        };
        this.addObject(m);

        Console.log("Hello!");
    }
}

class OrangeRobot : MirrorSprite, AnimatedSprite {
    mutating this void init() {
        this.animationFrames = this.idleFrames = [
            robots.Robots.robots.orange1,
            robots.Robots.robots.orange2,
            robots.Robots.robots.orange3,
            robots.Robots.robots.orange4
        ];

        this.walkFrames = [
            robots.Robots.robots.orangew1,
            robots.Robots.robots.orangew2,
            robots.Robots.robots.orangew3,
            robots.Robots.robots.orangew4,
            robots.Robots.robots.orangew5,
            robots.Robots.robots.orangew6,
            robots.Robots.robots.orangew7,
            robots.Robots.robots.orangew8
        ];
    }

    override mutating this suggestion react() {
        if (this.vx == 0 && this.animationFrames != this.idleFrames)
            this.animationFrames = this.idleFrames;
        else if (this.vx != 0 && this.animationFrames != this.walkFrames)
            this.animationFrames = this.walkFrames;
        return super();
    }

    array(tuple(string, string)) idleFrames;
    array(tuple(string, string)) walkFrames;
}

