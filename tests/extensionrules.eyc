alias core.*;

export main class Main : Basic {
    override mutating num main() {
        Test t = new;
        extend t : A;
        t.foo();
        extend t : B;
        t.foo();
        retract t : A;
        t.foo();
        extend t : A;
        t.foo();
        extend t : C;
        t.foo();
        retract t : B;
        t.foo();
        retract t : A;
        t.foo();
        retract t : C;
        t.foo();
        retract t : Test;
        Console.log("=");
        t.foo();
        Console.log("==");
    }
}

class Test {
    void foo() {
        Console.log("-");
    }
}

class A : Test {
    override void foo() {
        super();
        Console.log("A");
    }
}

class B : Test {
    override void foo() {
        super();
        Console.log("B");
    }
}

class C : A, B {
    override void foo() {
        super();
        Console.log("C");
    }
}
